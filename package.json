  "main": "dist/www/index.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/www/index.js",
    "dev": "nodemon",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
