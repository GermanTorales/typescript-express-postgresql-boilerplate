    "helmet": "7.0.0",
    "joi": "17.9.2",
    "jsonwebtoken": "9.0.1",
    "morgan": "1.10.0",
    "pg": "8.11.2",
    "ramda": "0.29.0",
    "reflect-metadata": "0.1.13",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.0",
    "tsoa": "5.1.1",
