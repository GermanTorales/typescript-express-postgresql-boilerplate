{
  "name": "typescript_express_postgresql_boilerplate",
  "version": "1.0.0",
  "description": "",
  "author": "german.torales@globallogic.com",
  "main": "dist/www/index.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/www/index.js",
    "dev": "ts-node-dev --exit-child --respawn -r tsconfig-paths/register src/www/index.ts",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "prettier": "prettier --check \"{*.js,!(node*)**/*.ts}\"",
    "prettier:fix": "prettier --write \"{*.js,!(node*)**/*.ts}\"",
    "swagger": "tsoa spec",
    "validate:branch-name": "./branches-validations.sh"
  },
  "license": "ISC",
  "dependencies": {
    "cors": "2.8.5",
    "date-fns": "2.30.0",
    "express": "4.18.2",
    "helmet": "7.0.0",
    "joi": "17.9.2",
    "morgan": "1.10.0",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.0",
    "winston": "3.10.0",
    "xss": "1.0.14"
  },
  "devDependencies": {
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/morgan": "1.9.4",
    "@types/node": "20.4.9",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "dotenv": "16.3.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "nodemon": "3.0.1",
    "prettier": "^3.0.1",
    "ts-node": "10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test && npm run validate:branch-name"
    }
  }
}